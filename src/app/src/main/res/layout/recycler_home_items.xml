<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/homeItemCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:cardElevation="@dimen/dimen_10dp">

        <LinearLayout
            android:id="@+id/homeCardParentLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <ImageView
                android:id="@+id/homeCardIConsIMV"
                android:layout_width="@dimen/dimen_85dp"
                android:layout_height="@dimen/dimen_85dp"
                android:src="@drawable/ic_local_dining_24px" />

            <TextView
                android:id="@+id/homeCardTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"

                android:gravity="center"
                android:text="@string/calorie_taken"
                android:textColor="@color/purple_200"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/homeDataCountTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="@string/cal_consumed"
                android:textColor="@color/purple_200"
                android:textSize="@dimen/small_text" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>